{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "stripInternal": true,
    "strictNullChecks": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": [
      "es2020",
    ]
  },
  "include": [
    "src"
  ]
}
